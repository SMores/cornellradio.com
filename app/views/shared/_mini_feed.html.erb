<% if params[:id] %>
  <% if params[:contoller] = :users %>
    <% @posts = Post.where(user_id: params[:id]) %>
  <% else %>
    <% @posts = Post.where(show_id: params[:id]) %>
  <% end %>
<% else %>
  <% @posts = Post.all %>
<% end %>
<% if @posts.any? %>
  <h3>Posts</h3>
  <ol class="posts">
    <%= render @posts.take(5) %>
  </ol>
<% end %>
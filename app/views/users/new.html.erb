<% provide :title, "Add new user" %>
<div class="box formBox">
  <h1>New user</h1>
  <%= form_for(@user) do |f| %>

    <%= render '/shared/error_messages', object: f.object %>

    <%= f.label :first_name %>
    <%= f.text_field :first_name %>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :bio %>
    <%= f.text_area :bio %>

    <%= f.label :level %>
    <%= f.select :level, [["Admin", 0], ["Manager", 1], ["DJ", 2]] %>

    <%= f.hidden_field :password, value: "CRrocks123" %>
    <%= f.hidden_field :password_confirmation, value: "CRrocks123" %>

    <%= f.submit "Create new user", class: "btn btn-primary" %>
  <% end %>
</div>

<%= link_to 'Back', users_path %>

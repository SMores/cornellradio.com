<% provide :title, "Personalities" %>
<div class="box sideBox">
  <%= render 'shared/on_now' %>
</div>
<div class="box feedBox" style="height:<%= (@users.count/2+1)*72 + 160 %>px">
  <h1>CornellRadio.com Personalities</h1>
  <div class="col1">
    <ol class="index">
      <%= render @users.all(limit: @users.count/2, order: :first_name) %>
    </ol>
  </div>
  <div class="col2">
    <ol class="index">
      <%= render @users.all(offset: @users.count/2, order: :first_name) %>
    </ol>
  </div>
</div>


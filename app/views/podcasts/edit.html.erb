<div class="box formBox">
  <h1>New Post</h1>
  <%= form_for @podcast do |f| %>

    <%= render '/shared/error_messages', object: f.object %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Max 250 char"%>
    <br><br>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>